{
  "compilerOptions": {
    "target": "es5",
    "module": "ES2015",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": false
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "build",
    "dist",
    "example",
    "rollup.config.js"
  ]
}
